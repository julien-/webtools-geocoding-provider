{
    "name": "openeuropa/webtools-geocoding-provider",
    "type": "library",
    "description": "Webtools Geocoding provider for Geocoder PHP.",
    "keywords": [],
    "homepage": "https://github.com/openeuropa/webtools-geocoding-provider",
    "license": "EUPL-1.2",
    "require": {
        "php": ">=7.4",
        "geocoder-php/common-http": "^4.3",
        "willdurand/geocoder": "^4.0"
    },
    "require-dev": {
        "geocoder-php/provider-integration-tests": "^1.5",
        "openeuropa/code-review": "^2.0",
        "php-http/curl-client": "^2.2",
        "phpunit/phpunit": "^7.5.15|~8|~9",
        "geocoder-php/google-maps-provider": "^4.7"
    },
    "provide": {
        "geocoder-php/provider-implementation": "1.0"
    },
    "autoload": {
        "psr-4": {
            "OpenEuropa\\Provider\\WebtoolsGeocoding\\": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    }
}
